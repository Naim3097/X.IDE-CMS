rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    function isAdmin() {
      return request.auth.token.role == 'admin';
    }
    
    function isClient(clientId) {
      return request.auth.token.clientId == clientId;
    }

    match /users/{userId} {
      allow read: if request.auth != null && (request.auth.uid == userId || isAdmin());
      allow write: if isAdmin();
    }

    match /clients/{clientId} {
      allow read: if isAdmin() || isClient(clientId);
      allow write: if isAdmin();
    }

    match /projects/{projectId} {
      allow read: if isAdmin() || (resource.data.clientId != null && isClient(resource.data.clientId));
      allow write: if isAdmin();
    }

    match /deliverables/{deliverableId} {
      allow read: if isAdmin() || (resource.data.clientId != null && isClient(resource.data.clientId));
      allow write: if isAdmin();
      // Allow clients to update status (e.g. approve)
      allow update: if isClient(resource.data.clientId) 
                    && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['status']);
    }
    
    match /activity_logs/{logId} {
      allow read: if isAdmin();
      allow create: if request.auth != null; // Allow users to log their actions
    }
  }
}
